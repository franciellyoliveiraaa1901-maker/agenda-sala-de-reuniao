<script>
// coloque aqui o link final do GitHub Pages quando publicar
const linkFinal = "https://SEU_USUARIO.github.io/NOME_DO_REPOSITORIO";

function gerarQR() {
    const url = `https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=${encodeURIComponent(linkFinal)}`;
    document.getElementById("qrcode").src = url;
}

gerarQR();
